{
  "name": "hyper-focus",
  "displayName": "hyper-focus",
  "description": "Find your way into the wilds of code by dimming the distractions.",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/isotopic/hyper-focus.git"
  },
  "bugs": {
    "url": "https://github.com/isotopic/hyper-focus/issues"
  },
  "homepage": "https://github.com/isotopic/hyper-focus#readme",
  "keywords": [
    "focus",
    "productivity",
    "code-reading",
    "highlight",
    "javascript",
    "typescript",
    "react"
  ],
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.hyperFocus",
        "title": "Toggle Hyper Focus"
      }
    ],
    "configuration": {
      "title": "Hyper Focus",
      "properties": {
        "hyperFocus.dimOpacity": {
          "type": "number",
          "default": 0.4,
          "minimum": 0.1,
          "maximum": 1,
          "description": "Opacity level for dimmed (unrelated) code. Lower values make the code more transparent."
        },
        "hyperFocus.focusOpacity": {
          "type": "number",
          "default": 1,
          "minimum": 0.1,
          "maximum": 1,
          "description": "Opacity level for focused code."
        },
        "hyperFocus.focusBackgroundColor": {
          "type": "string",
          "default": "rgba(128, 128, 220, 0.2)",
          "description": "Background color for highlighted focused code (supports rgba, hex, etc)."
        }
      }
    },
    "keybindings": [
      {
        "command": "extension.hyperFocus",
        "key": "alt+h",
        "mac": "alt+h",
        "win": "alt+h",
        "linux": "alt+h"
      }
    ],
    "icon": "icon.png",
    "galleryBanner": {
      "color": "#242427",
      "theme": "dark"
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "build": "vsce package",
    "install-local": "code --install-extension *.vsix",
    "dev-cycle": "npm run compile && npm run build && npm run install-local"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
